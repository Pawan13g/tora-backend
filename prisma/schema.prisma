// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum role {
  ADMIN
  USER
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  phoneNo     String
  ifsc        String
  accountNo   String
  bank        String
  sponserCode String
  role        role     @default(USER)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PanelTask {
  id        Int      @id @default(autoincrement())
  name      String
  kpi       String
  amount    String
  t_link    String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DashTask {
  id         Int      @id @default(autoincrement())
  name       String
  desc       String
  logo       String
  amount     String
  screenshot String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
